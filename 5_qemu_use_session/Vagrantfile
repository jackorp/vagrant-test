# -*- mode: ruby -*-
# vi: set ft=ruby :
BOX = ENV.fetch('BOX', 'fedora/37-cloud-base')
DRIVER = ENV.fetch('DRIVER', 'qemu')

Vagrant.configure("2") do |config|
  config.vm.box = BOX

  config.vm.provider :libvirt do |libvirt|
    libvirt.driver = DRIVER
    libvirt.qemu_use_session = true
  end
end
